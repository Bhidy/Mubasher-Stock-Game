{
    "functions": {
        "api/news.js": {
            "maxDuration": 30
        },
        "api/x-community.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/x-community",
            "destination": "/api/x-community.js"
        },
        {
            "source": "/api/stocks",
            "destination": "/api/stocks.js"
        },
        {
            "source": "/api/news",
            "destination": "/api/news.js"
        },
        {
            "source": "/api/chart",
            "destination": "/api/chart.js"
        },
        {
            "source": "/api/proxy-image",
            "destination": "/api/proxy-image.js"
        },
        {
            "source": "/api/debug",
            "destination": "/api/debug.js"
        },
        {
            "source": "/api/news/content",
            "destination": "/api/content.js"
        },
        {
            "source": "/api/translate",
            "destination": "/api/translate.js"
        },
        {
            "source": "/api/ai-insight",
            "destination": "/api/ai-insight.js"
        },
        {
            "source": "/api/stock-profile",
            "destination": "/api/stock-profile.js"
        },
        {
            "source": "/api/chatbot",
            "destination": "/api/chatbot.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}